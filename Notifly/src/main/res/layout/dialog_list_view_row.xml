<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/card_view_padding"
        android:id="@+id/dialog_image_type"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dialog_image_type"
        android:layout_marginStart="5dp"
        android:paddingBottom="0dp"
        android:textSize="@dimen/card_view_text"
        android:gravity="center"
        android:id="@+id/dialog_text_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_text_name"
        android:layout_alignStart="@id/dialog_text_name"
        android:paddingTop="0dp"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/dialog_text_mac"/>

</RelativeLayout>